<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeLink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/accent_color</item>
        <item name="android:statusBarColor">@color/color_background</item>
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->

        <!-- Customize your theme here. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="textColor">@color/color_text</item>

<!--        splash-->
        <item name="windowSplashScreenBackground">@color/color_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.CodeLink</item>

    </style>



    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded30">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>


    <style name="roundInputTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_43sdp</item>
        <item name="android:textSize">12sp</item>
        <item name="boxBackgroundColor">@color/color_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/app_edit_text</item>
    </style>

    <style name="keyboard_key" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:background">@drawable/keyboard_button</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/custom_dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/color_text</item>
    </style>

    <style name="CustomDialogPositiveButton" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/custom_button_ripple</item>
        <item name="textColor">@color/color_text</item>
    </style>

    <style name="CustomDialogNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:background">@drawable/custom_button_ripple</item>
        <item name="textColor">@color/color_text</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/color_secondary_background</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>