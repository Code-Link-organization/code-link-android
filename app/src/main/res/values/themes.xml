<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeLink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="fontFamily">@font/merriweather_regular</item>

    </style>

    <style name="roundInputTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>

        <item name="boxBackgroundColor">@color/color_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/app_edit_text</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Customize the positive button's text color -->
        <item name="colorAccent">@color/color_primary</item>

        <item name="android:textColor">@color/color_text</item>

        <!-- Customize the negative button's text color -->
        <item name="android:textColorSecondary">@color/color_text</item>

        <!-- Customize the negative button's background color -->
        <item name="android:colorBackground">@color/color_background</item>
    </style>
</resources>